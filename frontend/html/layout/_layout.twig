                <li>{{ user.username|e }}</li>
            {% endfor %}

            {% for i in 0..10 %}
                * {{ i }}
            {% endfor %}

            {% for letter in 'a'..'z' %}
                * {{ letter }}
            {% endfor %} #}

        {% endblock %}
    </main><!-- end main -->

    <!-- begin footer -->
    {% block footer %} {% include '../../assets/blocks/footer/footer.twig' %} {% endblock %}
    <!-- end footer -->

</div><!-- end wrapper -->


<button class="scroll-top js-scroll-top">
    <img src="/assets/images/icons/scroll-top.svg" alt="to top">
</button>

{% block scripts %}
    {#<script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU" ></script>#}
